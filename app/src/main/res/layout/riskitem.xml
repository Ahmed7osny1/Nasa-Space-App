<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    >

    <ImageView
        android:id="@+id/RiskImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TitleRisk"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="Title of Risk"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/RiskImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DiscRisk"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="15dp"
        android:maxLines="2"
        android:text="Discription of Risk"
        android:textSize="13sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/RiskImage"
        app:layout_constraintTop_toBottomOf="@+id/TitleRisk" />



</androidx.constraintlayout.widget.ConstraintLayout>